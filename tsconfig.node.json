{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "6.0",
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "electron-vite/node"
    ]
  }
}